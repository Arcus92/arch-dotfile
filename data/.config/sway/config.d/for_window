# Put application settings here

# Add transparency to VSCode
for_window [class="code-oss"] opacity 0.9
for_window [class="Pcmanfm"] opacity 0.9
for_window [app_id="nemo"] opacity 0.9
for_window [class="jetbrains-*"] opacity 0.9
for_window [class="discord"] opacity 0.9

# Floating windows
for_window [app_id="pavucontrol"] floating enable

# Prevent idle state when any app is in fullscreen mode
for_window [shell=".*"] inhibit_idle fullscreen