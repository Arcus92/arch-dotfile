set $font                SourceCodePro Medium 11
set $bg-color            #{theme_color_background_dark}

set $focused-bg-color    #{theme_color_background_dark}
set $active-bg-color     #{theme_color_background_dark}
set $inactive-bg-color   #{theme_color_background_light}
set $text-color          #{theme_color_text}
set $focused-text-color  #ffffff
set $inactive-text-color #{theme_color_text}
